# syntax=docker/dockerfile:1.6

# ============================================
# Stage 1: Base image with common dependencies
# ============================================
FROM node:25-alpine AS base

# Install security updates
RUN apk update && apk upgrade && \
    apk add --no-cache curl && \
    rm -rf /var/cache/apk/*

# Set working directory
WORKDIR /app

# Create non-root user for security
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 --ingroup nodejs appuser

# ============================================
# Stage 2: Dependencies installation
# ============================================
FROM base AS deps

# Install pnpm
RUN corepack enable && corepack prepare pnpm@8 --activate

# Copy package files
COPY frontend/package.json frontend/pnpm-lock.yaml* ./

# Install all dependencies
RUN --mount=type=cache,id=pnpm,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile

# ============================================
# Stage 3: Development image
# ============================================
FROM base AS development

# Install pnpm
RUN corepack enable && corepack prepare pnpm@8 --activate

# Copy dependencies
COPY --from=deps /app/node_modules ./node_modules

# Copy source code
COPY frontend/ ./

# Set environment
ENV NODE_ENV=development

# Expose Vite dev server port
EXPOSE 5173

# Use non-root user
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:5173 || exit 1

# Start Vite dev server
CMD ["pnpm", "dev", "--host", "0.0.0.0"]

# ============================================
# Stage 4: Build stage
# ============================================
FROM deps AS builder

# Build arguments
ARG VERSION=unknown
ARG VITE_API_URL=http://localhost:3000

# Install pnpm
RUN corepack enable && corepack prepare pnpm@8 --activate

# Copy source code
COPY frontend/ ./

# Set build-time environment variables
ENV VITE_API_URL=${VITE_API_URL}
ENV VITE_APP_VERSION=${VERSION}

# Build the application
RUN pnpm build

# ============================================
# Stage 5: Production image with Nginx
# ============================================
FROM nginx:1.25-alpine AS production

# Build arguments for versioning
ARG VERSION=unknown
ARG BUILD_DATE=unknown

# Labels for container metadata
LABEL org.opencontainers.image.title="Foohut Frontend"
LABEL org.opencontainers.image.description="Foohut Frontend Web Application"
LABEL org.opencontainers.image.version="${VERSION}"
LABEL org.opencontainers.image.created="${BUILD_DATE}"
LABEL org.opencontainers.image.vendor="Foohut"
LABEL org.opencontainers.image.source="https://github.com/foohut/foohut"

# Install curl for health checks
RUN apk add --no-cache curl && rm -rf /var/cache/apk/*

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy custom nginx configuration
COPY <<'EOF' /etc/nginx/conf.d/default.conf
server {
    listen 80;
    listen [::]:80;
    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.foohut.com wss://api.foohut.com;" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml application/javascript application/json;

    # Cache static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 'OK';
        add_header Content-Type text/plain;
    }

    # SPA routing - serve index.html for all routes
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Disable access to hidden files
    location ~ /\. {
        deny all;
    }
}
EOF

# Copy built application
COPY --from=builder /app/dist /usr/share/nginx/html

# Set proper permissions
RUN chown -R nginx:nginx /usr/share/nginx/html && \
    chmod -R 755 /usr/share/nginx/html

# Create non-root user configuration for nginx
RUN touch /var/run/nginx.pid && \
    chown -R nginx:nginx /var/run/nginx.pid && \
    chown -R nginx:nginx /var/cache/nginx

# Use non-root user
USER nginx

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost/health || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
